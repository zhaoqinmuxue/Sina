<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/statusBack"
        android:fitsSystemWindows="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/theme_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="@color/transparent"
                android:src="@drawable/ic_backspace"
                android:layout_marginStart="14dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="18dp"
                android:gravity="center_vertical"
                android:text="主题风格"
                android:background="@color/transparent"
                android:textSize="22sp"
                android:textColor="?attr/statusFore"/>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/theme_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="?attr/mainBack">

        <LinearLayout
            android:id="@+id/theme_white"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingStart="10dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#FAFAFA"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:text="今夜白"
                android:textColor="#009688"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/theme_black"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingStart="10dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#424242"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:text="夜间黑"
                android:textColor="#424242"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>